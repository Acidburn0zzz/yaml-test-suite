[[ -n ${ZSH_VERSION-} ]] &&
  YAML_TEST_SUITE_ROOT="$0" ||
  YAML_TEST_SUITE_ROOT="$BASH_SOURCE"
[[ $YAML_TEST_SUITE_ROOT =~ ^/ ]] ||
  YAML_TEST_SUITE_ROOT="$PWD/$YAML_TEST_SUITE_ROOT"
export YAML_TEST_SUITE_ROOT="$(cd "$(dirname $YAML_TEST_SUITE_ROOT)"; pwd)"

export PATH="$YAML_TEST_SUITE_ROOT/bin:$PATH"
